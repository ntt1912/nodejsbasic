<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <title>NodeJs Basic</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a id="news-link" href="http://localhost/phpmyadmin/index.php?route=/sql&pos=0&db=nodejsbasic&table=accounts"
            target="_blank">DataBase </a>
        <a href="https://github.com/ntt1912/nodejsbasic" target="_blank">SourceCode</a>
    </div>

    <div>
        <div class="w3-container">
            <h2>List Account</h2>

            <table class="w3-table-all w3-hoverable">
                <thead>
                    <tr class="w3-light-grey">
                        <th>ID</th>
                        <th>Page</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i=0; i < dataAccount.length; i++) { %>
                        <tr>
                            <td>
                                <%= dataAccount[i].id %>
                            </td>
                            <td>
                                <%= dataAccount[i].page %>
                            </td>
                            <td>
                                <%= dataAccount[i].date %>
                            </td>
                            <td class="button-container">
                                <button type="button"
                                    onclick="window.location.href='/detail/account/<%= dataAccount[i].id %>'">Detail</button>
                                <form action="/edit-account/<%= dataAccount[i].id %>" method="GET">
                                    <button type="submit">Edit</button>
                                </form>
                                <form action="/delete-account" method="POST">
                                    <input type="text" hidden value="<%= dataAccount[i].id %>" name="accountId" />
                                    <button type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
        <div class="create-account-container">
            <form action="/create-new-account" method="POST">
                <div>Create a new account: </div>
                <div>
                    <label>Page:</label>
                    <input type="text" name="page" />
                </div>
                <div>
                    <label>Date:</label>
                    <input type="text" name="date" />
                </div>
                <div>
                    <label>Email:</label>
                    <input type="text" name="email" />
                </div>
                <div>
                    <label>Password:</label>
                    <input type="text" name="password" />
                </div>
                <div>
                    <button type="submit" class="submit-btn">Submit</button>
                </div>
            </form>
        </div>
    </div>
</body>

</html>